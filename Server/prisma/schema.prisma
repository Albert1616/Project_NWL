generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model habit {
  id          String   @id @default(uuid())
  name        String
  data_create DateTime

  dayHabits     dayHabit[]
  habitweekdays habitweekdays[]

  @@map("habits")
}

model habitweekdays {
  id       String @id @default(uuid())
  id_habit String
  week_day Int

  habit habit @relation(fields: [id_habit], references: [id],onDelete: Cascade)

  @@unique([id_habit, week_day])
  @@map("habit_week_days")
}

model Days {
  id        String     @id @default(uuid())
  date      DateTime
  dayHabits dayHabit[]

  @@unique([date])
  @@map("days")
}

model dayHabit {
  id       String @id @default(uuid())
  id_day   String
  id_habit String

  day   Days  @relation(fields: [id_day], references: [id], onDelete: Cascade)
  habit habit @relation(fields: [id_habit], references: [id], onDelete: Cascade)

  @@unique([id_day, id_habit])
  @@map("Day_habit")
}
